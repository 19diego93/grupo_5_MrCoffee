<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <link rel="stylesheet" href="/css/home.css" />
    <link rel="stylesheet" href="/css/statics/products.css" />
  </head>
  <body>
    <%- include('./partials/header') %>
    <main>
      <!--! Campaña -->
      <section class="Container-Campaign">
        <article class="campaña">
          <h1>¡Conocé nuestras variedades!</h1>
          <a href="/product" class="boton-descubrir">
            <p>¡Descubrír!</p>
          </a>
        </article>
        <article id="wave-effect">
          <svg viewBox="0 0 500 150" preserveAspectRatio="none">
            <path
              d="M-7.77,66.63 C149.99,150.22 349.21,-50.06 514.81,77.49 L500.00,150.22 L0.00,150.22 Z"
            ></path>
          </svg>
        </article>
      </section>
      <!--! Destacados -->
      <section class="conteiner-featured">
        <article>
          <h2>DESTACADOS</h2>
        </article>
        <div class="container-products-top">
          <div class="products">
            <!--! Productos - CAFE -->
            <% for(let i=0; i < coffee.length; i++){ %>
            <article class="product-content">
              <div class="details">
                <div class="image">
                  <img src="<%= coffee[i].image%>" alt="" />
                </div>
                <div class="product-descriptions">
                  <span class="product-Name"><%= coffee[i].name%></span>
                  <span class="product-Price">$ <%= coffee[i].price%></span>
                </div>
                <div class="product-rating">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </div>
                <div class="product-buttons">
                  <button class="product-buy">Comprar</button>
                  <a
                    class="product-info"
                    href="/product/detail/<%= coffee[i].id%>"
                  >
                    Informacion
                  </a>
                </div>
              </div>
            </article>
            <% }%>
            <!--! Productos - Comida -->
            <% for(let i=0; i < food.length; i++){ %>
            <article class="product-content">
              <div class="details">
                <div class="image">
                  <img src="<%= food[i].image%>" alt="" />
                </div>
                <div class="product-descriptions">
                  <span class="product-Name"><%= food[i].name%></span>
                  <span class="product-Price">$<%= food[i].price%>0</span>
                </div>
                <div class="product-rating">
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                  <i class="fas fa-star"></i>
                </div>
                <div class="product-buttons">
                  <button class="product-buy">Comprar</button>
                  <a
                    class="product-info"
                    href="/product/detail/<%= food[i].id%>"
                  >
                    Informacion
                  </a>
                </div>
              </div>
            </article>
            <% }%>
          </div>
        </div>
      </section>
    </main>
    <%- include('./partials/footer') %>
  </body>
</html>
