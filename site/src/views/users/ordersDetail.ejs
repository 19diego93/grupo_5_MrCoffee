<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/users/styles.css" />
    <link rel="stylesheet" href="/css/users/profile.css" />
    <link rel="stylesheet" href="/css/users/orders.css" />
    <link rel="stylesheet" href="/css/users/ordersDetail.css" />
  </head>

  <body>
    <%- include('../partials/header') %>
    <main>
      <section class="contenedor-perfil">
        <article class="elem_1">
          <div class="Container-Config">
            <button class="content-button" id="button-config">
              <i class="fas fa-cog" aria-hidden="true"></i>
              <p>Configuración</p>
              <i class="fas fa-angle-down list_arrow" aria-hidden="true"></i>
            </button>
            <ul class="list_show">
              <li>
                <a href="/user/profile" class="nav_link nav_link--inside"
                  >Mi Perfil</a
                >
              </li>
              <li>
                <a href="/user/profile/edit" class="nav_link nav_link--inside"
                  >Editar Perfil</a
                >
              </li>
              <li>
                <a
                  href="/user/profile/password"
                  class="nav_link nav_link--inside"
                  >Cambiar Contraseña</a
                >
              </li>
              <li>
                <a
                  href="/user/profile/orders"
                  class="nav_link nav_link--inside"
                  >compras</a
                >
              </li>
              <li>
                <a
                  href=""
                  class="nav_link nav_link--inside select-url"
                  >Detalle de Compra</a
                >
              </li>
            </ul>
          </div>
        </article>
        <article class="elem_2">
          <div class="container-orders">
            <div class="orders">
              <table>
                <thead class="table-head">
                  <tr>
                    <th>
                      <span data-orderID="<%=orderID%>" id="orderID">Pedido</span>
                    </th>
                    <th>
                      <span>Nombre</span>
                    </th>
                    <th>
                      <span>Precio por unidad</span>
                    </th>
                    <th>
                      <span>Articulos</span>
                    </th>
                  </tr>
                </thead>
                <tbody class="orders-content">
                </tbody>
              </table>
            </div>
          </div>
        </article>
      </section>
    </main>
    <%- include('../partials/footer') %>
    <script src="/js/drop-downProfile.js" type="text/javascript"></script>
    <script src="/js/orders/ordersDetail.js" type="text/javascript"></script>
  </body>
</html>
