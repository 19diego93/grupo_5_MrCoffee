<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/users/styles.css" />
    <link rel="stylesheet" href="/css/users/profile.css" />
</head>

<body>
  <%- include('../partials/header') %>
    <main>
      <section class="contenedor-perfil">
        <article class="elem_1">
          <div class="Container-Config">
            <button class="content-button" id="button-config">
              <i class="fas fa-cog" aria-hidden="true"></i>
              <p>Configuración</p>
              <i class="fas fa-angle-down list_arrow" aria-hidden="true"></i>
            </button>
            <ul class="list_show">
              <li>
                <a href="/user/profile" class="nav_link nav_link--inside select-url">Mi Perfil</a>
              </li>
              <li>
                <a href="/user/profile/edit" class="nav_link nav_link--inside">Editar Perfil</a>
              </li>
              <li>
                <a href="/user/profile/password" class="nav_link nav_link--inside">Cambiar Contraseña</a>
              </li>
            </ul>
          </div>
        </article>
        <article class="elem_2">
          <div class="container-card-pc">
            <div class="card">
              <img src="/img/bg-pattern-card.svg" alt="imagen header card" class="card-header">
              <div class="card-body">
                <div class="new-img">
                  <picture>
                    <img src="/img/avatar/<%=user.image%>" alt="imagen de usuario" class="card-body-img">
                  </picture>
                </div>
                <h2 class="card-body-name">
                  <%=user.first_name%>
                    <%=user.last_name%>
                </h2>
                <h3 class="card-body-email">
                  <%=user.email%>
                </h3>
                <p class="card-body-text">
                  <%=user.User_category.name%>
                </p>
              </div>
              <div class="card-footer">
                <div class="card-footer-social">
                  <span>
                    <%=acquirers.length%>
                  </span>
                  <p>Compras</p>
                </div>
                <div class="card-footer-social">
                  <span>0</span>
                  <p>Favoritos</p>
                </div>
              </div>
            </div>
          </div>
        </article>
      </section>
    </main>
    <%- include('../partials/footer') %>
      <script src="/js/drop-downProfile.js" type="text/javascript"></script>
</body>

</html>